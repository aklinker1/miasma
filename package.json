{
  "name": "miasma",
  "version": "0.4.0",
  "scripts": {
    "build": "./scripts/build.sh",
    "preview": "./scripts/preview.sh",
    "dev": "concurrently --kill-others-on-fail -n JS,GO -c green,cyan \"pnpm -q dev:frontend\" \"pnpm -q dev:backend\"",
    "dev:backend": "nodemon -q --signal SIGTERM -e go --exec 'bash -c' ./scripts/dev-backend.sh",
    "dev:frontend": "cd web && pnpm dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3"
  }
}
