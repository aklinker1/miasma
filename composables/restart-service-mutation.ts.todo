import { gql } from "graphql-tag";
import { serviceFragment } from "../utils/apollo-client";
import { useMutation } from "@vue/apollo-composable";
import { Service } from "./list-services-query";

export function useRestartAppMutation() {
  return useMutation<{ service: Service }, { id: string }>(
    gql`
      mutation restartApp($id: ID!) {
        service: restartApp(id: $id) {
          ...AppListApp
        }
      }
      ${serviceFragment}
    `
  );
}
